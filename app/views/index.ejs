    <title>Início</title>
</head>

<!-- Testando a instalação do servidor -->

<body>


    <div id="grid">
        <header>
            <nav id="nav-principal">
                <nav id="nav-info-perfil">
                    <a href="/"><img src="image/images/perfil.jpg" alt="" id="imagem-perfil"></a>
                    <a href="/"><span class="caveat"><%=infoDesigne.nome%></span></a>
                </nav>

                <nav id="nav-menu-desktop">
                    <ul id="menu-desktop">
                        <li>
                            <span id="contatos" class="itens-menu" onmouseover="mostrarContatos(); esconderHamburguer(); esconderConfiguracoes()" onmouseout="timeContatos()"><i class="far fa-comments"></i></span>
                            <ul id="subMenu-contatos" onmouseover="mostrarContatos()" onmouseout="esconderContatos()">
